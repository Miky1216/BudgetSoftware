<Window x:Class="BudgetApplication.Transaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Transaction" Height="300" Width="350">
    <Grid>
        <TextBlock x:Name="txtblockDate" HorizontalAlignment="Left" Margin="36,36,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="txtblockCategory" HorizontalAlignment="Left" Margin="36,80,0,0" TextWrapping="Wrap" Text="Category" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="txtblockAmount" HorizontalAlignment="Left" Margin="36,129,0,0" TextWrapping="Wrap" Text="Amount" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtCategory" HorizontalAlignment="Left" Height="23" Margin="162,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Height="23" Margin="162,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <DatePicker HorizontalAlignment="Left" Margin="162,32,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnPost" Content="Post" HorizontalAlignment="Left" Margin="114,190,0,0" VerticalAlignment="Top" Width="75" Click="btnPost_Click"/>

    </Grid>
</Window>
